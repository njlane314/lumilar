/control/verbose 0
/run/verbose 0
/event/verbose 0
/tracking/verbose 0
/process/verbose 0

/run/initialize

# general, marley
/generator/set general

# e-, e+, mu-, mu+, neutron, proton, anti_proton, pi-, pi+, pi0, kaon-, kaon+, gamma, opticalphoton, ...
/gps/particle proton

# point source
/gps/pos/type Point
/gps/pos/centre 0 0 0 cm

# angular distribution
/gps/ang/type iso

# energy distribution
/gps/ene/type Lin
/gps/ene/min 0. MeV
/gps/ene/max 30. MeV
/gps/ene/gradient 0.
/gps/ene/intercept 1.

# run
/run/beamOn 1000